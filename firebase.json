{
  "hosting": {
    "public": "dist/proveIt",
    "predeploy": [
      "ng build --prod"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/prove",
        "function": "prove"
      },
      {
        "source": "/api/store",
        "function": "store"
      },
      {
        "source": "/api/download",
        "function": "download"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
